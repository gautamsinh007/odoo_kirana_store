<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <template id="test" name="teacher Form">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container">
                    <div class="col-md-12">

                       <form action="/demo_data" role='form' method="POST" > 
                        <!-- #url/controller to called on the form action. -->
                        <input type='hidden' name='csrf_token' t-att-value='request.csrf_token()'/>
                            
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" name="name" t-att-value="name" id="name" required="true" />
                             <!-- #label and id of the fields to be created in the form.These fields  should be present in the model for the entry of the data into the database.#           -->
                            </div>

                            <div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email" 
                                t-att-value="email"  id="email" required="true" />
                            </div>
                            
                            <div class="form-group">
                                <label for="place">Place :</label>
                                <input type="place" class="form-control" name="place" 
                                t-att-value="place"  id="place" required="true" />
                            </div>

                            <div class="form-group">
                                <label for="demo">demo :</label>
                                <input type="demo" class="form-control" name="demo" 
                                t-att-value="demo"  id="demo" required="true" />
                            </div>

                         
                            <div class="form-group">
                                <label for="country_id">country :</label>
                                <select name="country_id" class="form-control" id="">
                                   
                                    <t t-foreach="country_id" t-as="country">

                                        <option value=""  t-esc="country.name" t-att-value="country.id" />
                                     
                                        
                                    </t>
                            </select>
                            </div>


                            <button type="submit" class="btn btn-primary">Create</button>

                        </form>


                    </div>
                </div>
              </div>
          </t>
    </template>

</odoo>
