<?xml version="1.0" encoding="utf-8"?>
<odoo>
   

    <template id="certificate_student_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style='page-break-before:always;'>

                <div  style="position: absolute;text-align:center; z-index:-1; border:0;opacity:0.5;padding: too 330px; padding: left 145px; " >
                <img t-att-src=" 'data:image/png;base64,%s'%to_text(o.user_company.logo)" style="height: 600px; width: 600px; opacity:0.15;"/>                      
                <!-- <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo"/> -->
                <!-- <img src="/logo.png?company=${company.id}\" style="padding: 0px; margin: 0px; height: auto; width: 80px;\" alt="${company.name}\"/> -->
            </div>
                        <h2>Sample Report</h2>
                            <ul>

                                <li> Name : <span t-field = "o.name" ></span> </li>
                                <li> datetime : <span t-field = "o.datetime" ></span> </li>
                                <li> datetime : <span t-field = "o.defult_datetime" ></span> </li>
                                <li> login_user : <span t-field = "o.login_user" ></span> </li>
                                <li> company : <span t-field = "o.user_company" ></span> </li>
                                <li> activate :  <span t-field = "o.activate" ></span>   </li>
                            </ul>
                    </div>
                </t>
            </t>
        </t>
    </template>


<record id="action_report_certificate_student" model="ir.actions.report">
        <field name="name">certificate student </field>
        <field name="model">certificate.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sinstitute_certificate.certificate_student_report</field>
        <field name="report_file">sinstitute_certificate.certificate_student_report</field>
        <field name="binding_model_id" ref="model_certificate_student"/>
        <field name="binding_type">report</field>

    </record>





</odoo>

