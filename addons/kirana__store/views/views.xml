<odoo>
  <data>

    
    <record model="ir.ui.view" id="kirana__store_view_form">
      <field name="name">Kirana.Store.form</field>
      <field name="model">kirana__store.kirana__store</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </form>
      </field>
    </record>


    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="kirana__store_tree_view">
      <field name="name">Kirana.Store.list</field>
      <field name="model">kirana__store.kirana__store</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kirana__store_action_window">
      <field name="name">Kirana_Store window</field>
      <field name="res_model">kirana__store.kirana__store</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Kirana_Store" id="kirana__store_menu_root" sequence="5" action='kirana__store_action_window'/>


  </data>
</odoo>




