<?xml version="1.0" encoding="utf-8"?>
<odoo>

            <record id="purchase_datas_view_tree" model="ir.ui.view">
                <field name="name">purchase_data.view.tree</field>
                <field name="model">purchase.data</field>
                <field name="arch" type="xml">
                    <tree string="">
                     <t t-if="user == 'self.env.user.login'"> 
                        
                        <field name="name"  />


                        <field name="productqty" />
                     </t> 

                    </tree>
                </field>
            </record>  



            <record id="purchase_data_view_kanban" model="ir.ui.view">
                <field name="name">purchase_datas_view.kanban</field>
                <field name="model">purchase.data</field>
                <field name="arch" type="xml">
                    <kanban string="purchase_datas kanban" class="o_res_partner_kanban">
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click">
                                    <div>
                                          
                                        <li>
                                           Name: <field name="name"/>
                                        </li>        
                                           Product: <field name="productqty"/>
                                           
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
            </record>
        



<record id="purchase_dataa_action" model="ir.actions.act_window">

    <field name="name">Product view</field>
    <field name="res_model">purchase.data</field>
    <field name="view_mode">tree,kanban</field>
    <field name="context">{'dynamic_domain': True}</field>

</record>


<menuitem  id="purchase_dataa_submenus"  name="Product View" sequence="10" action = "purchase_dataa_action" parent = "products_data_menu"/> 
   
    
</odoo>
