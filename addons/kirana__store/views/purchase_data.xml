<record id="purchase_data_action" model="ir.actions.act_window">

    <field name="name">Product Add</field>
    <field name="res_model">purchase.data</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'dynamic_domain': True}</field>
    
</record>


<menuitem
    id="purchase_data_submenus"
    name="Purchase Product"
    sequence="10"
    action = "purchase_data_action"
