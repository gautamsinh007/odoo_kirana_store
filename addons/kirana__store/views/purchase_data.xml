        </record>   


            <record id="purchase_data_view_tree" model="ir.ui.view">
                <field name="name">purchase_data.view.tree</field>
                <field name="model">purchase.data</field>
                <field name="arch" type="xml">
                    <tree string="">

                        <field name="name" />
                        <field name="productqty"/>
                      
                    </tree>
                </field>
            </record>  

