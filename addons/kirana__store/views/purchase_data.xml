        <field name="arch" type="xml">

                    <form string="">
                        <header>
                       
                            <button string="send mail" name="check_orm" type="object"  class="oe_highlight" />
                            <button string="update info" name="test" type="object"  class="oe_highlight" />
      
                      </header> 
                        <sheet>

                           <group>

                                <field name="name"/>
                                <field name="user"/>
