<odoo>
    <!-- Note : in html field  do not use any line content  without tag.  use this way: <p> content
    </p> -->
    <data noupdate="1">
        <record id="send_products_email_template" model="mail.template">
            <field name="name">Product Detailes: Sending</field>
            <field name="model_id" ref="model_sale_data" />
            <field name="email_from"> {{object.mail_send or ''}}</field>
            <field name="email_to">{{object.user.login or ''}}</field>
            <field name="subject">{{object.mail_send}} Product buy (Ref {{object.mail_send}})</field>
            <field name="body_html" type="html">
                <div class='abc' style="background-color: rgb(113, 156, 166);">
                    <p> Dear <span t-field="object.user.login" /></p>
                    <p> Here are the product details </p>
                    <t t-foreach="object.productqty" t-as="i">
                        <table>
                            <td>
                                <p> Product Name :<t t-out="i.product_id.name" /></p>
                            </td>
                            <td>
                                <p> Quantity :<t t-out="i.qty" /></p>
                            </td>
                        </table>
                    </t>
                    <img
                        src="https://mdbootstrap.com//img/Photos/Square/1.jpg"
                        class="h-auto max-w-full rounded-full"
                        alt="" />
                    <p> Do not hesitate to contact us if you have any questions. <span
                            t-field="object.mail_send" />
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>