<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_data_view_form" model="ir.ui.view">
        <field name="name">sale_data.view.form</field>
        <field name="model">sale.data</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="send mail" name="check_orm" type="object" class="oe_highlight" />
                    <button string="Send in whatsapp" name="share_whatsapp"  class="oe_highlight" icon='fa-whatsapp' data-hotkey='w' type='object'  />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="user" />
                        <field name="mail_send" />
                        <field name="type" />
                        <field name="totle" />
                        <field name="phone" />
                        <field name="images" widget='image' id='images' style="width:300px;" />
                    </group>
                    <notebook>
                        <page name="demo_fields_liness" string="Product Add">
                            <form string='demo fieldss'>
                                <field name="productqty" />
                            </form>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sale_data_view_tree" model="ir.ui.view">
        <field name="name">sale_data.view.tree</field>
        <field name="model">sale.data</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" string='Name' />
                <field name="productqty" string='ProductQty' />
                <field name="user" />
                <field name="mail_send" />
                <field name="type" />
                <field name="phone" />
                <field name="create_date" />
            </tree>
        </field>
    </record>
    <record id="sale_data_action" model="ir.actions.act_window">
        <field name="name">Product Sale/Buy</field>
        <field name="res_model">sale.data</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'dynamic_domain': True}</field>
    </record>
    <menuitem
        id="sale_data_submenus"
        name="Buy/Sale Data"
        sequence="10"
        action="sale_data_action"
        parent="products_data_menu" />
</odoo>